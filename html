  <script>
    // Mobile menu toggle
    const menuBtn = document.getElementById("menu-btn");
    const mobileMenu = document.getElementById("mobile-menu");
    menuBtn.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });

    // AI detection logic (simulated)
    const form = document.getElementById("detector-form");
    const resultDiv = document.getElementById("result");
    const humanizeSection = document.getElementById("humanize-section");
    const humanizeInput = document.getElementById("humanize-input");
    const humanizeBtn = document.getElementById("humanize-btn");
    const humanizedOutput = document.getElementById("humanized-output");

    form.addEventListener("submit", (e) => {
      e.preventDefault();
      const text = form.content.value.trim();
      if (!text) return;

      resultDiv.classList.remove("hidden");
      resultDiv.textContent = "Analyzing...";
      resultDiv.classList.remove("text-red-600", "text-green-600");
      humanizeSection.classList.add("hidden");
      humanizeInput.value = "";
      humanizedOutput.textContent = "";

      setTimeout(() => {
        const lowerText =
